{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2018", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "example"]
}
